{{> secondNavbar }}

<script src="/js/index.js"></script>
<script src="/js/timer.js"></script>
<script src="/js/speech.js"></script>

{{#equal section 1}}
	<script>
		$( document ).ready(function() {
			startTimer();
    		setTimeout(
			    function() {
			    	readFirstQuestion("{{question}}")
			    }, 1000);
		});
	</script>
{{/equal}}
{{#equal section 2}}
		<script>
			$( document ).ready(function() {
				sendCorrect("{{questions}}")
			});
		</script>
		<div id="hide">
			<div class="center">
				<h1> When you're ready to speak, press Start!</h1>
		    </div>
		    <div class="center">
		    	<button class="btn btn-hg btn-inverse pull-left" onclick=speak("{{total}}")> Start</button>
		    </div>
		</div>
{{/equal}}
{{#equal section 3}}
	<script>
		$( document ).ready(function() {
			startTimer();
		  	setTimeout(
		    function() {
		    	readThirdQuestion("{{question}}")
		    }, 1000);
		});
	</script>
{{/equal}}

<ul>
 	<form id="form" action="/test/{{test}}/inSection/{{section}}" method="POST">
 		<input name="correctAnswer" value="{{correctAnswer}}" hidden>
 		<input id="time" name="time" value="" hidden>
 		{{#equal section 1}}
 		<div class="progress">
  			<div class="progress-bar" style="width: {{sectionProgress}};"></div>
  		</div>
 		<div class="container">
		{{#each answers}}
			<span class="imageContainer">
				<input type="image" class="section1Image" name="answer" value="{{this}}" onclick="endTimer()" src="{{this}}">
			</span>
		 {{/each}}
		 </div>
		 <div class="center">
		 	<a type="btn" class="btn btn-hg btn-embossed btn-inverse" onclick=readFirstQuestion("{{question}}")>Repeat Question</a>
		 </div>
	    {{/equal}}
	    {{#equal section 2}}
	    <div id="show" style="display: none;">
		    <span class="colorContainer">
			    {{#each questions}}
			    	<span class="colorBox" style="background-color: {{this}};"></span>
			    {{/each}}
		    </span>
		   	<input name="questions" value="{{questions}}" hidden>
		   	<input id="speechAnswer" name="speechAnswer" value="test" hidden>
		   	<div class="box-footer center">
		   		<a type="btn" class="btn btn-hg btn-inverse pull-left info" onclick="stop()"> Done</a>
<!-- 		   		<button class="btn btn-hg btn-inverse pull-left info" onclick="stop()"> Done</button> -->
		    </div>
	    </div>
	    {{/equal}}
	    {{#equal section 3}}
	    <div class="progress">
  			<div class="progress-bar" style="width: {{sectionProgress}};"></div>
  		</div>
 		<div class="container">
		{{#each answers}}
			<span class="imageContainer">
				<input type="image" class="section1Image" name="answer" value="{{this}}" onclick="endTimer()" src="{{this}}">
			</span>
		 {{/each}}
		 </div>
		 <div class="center">
		 	<a type="btn" class="btn btn-hg btn-embossed btn-inverse" onclick=readThirdQuestion("{{question}}")>Repeat Question</a>
		 </div>
	    {{/equal}}
    </form> 
</ul>